--// Settings \\--
local range = 10
------------------


--// Variables \\--
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local StarterGui = game:GetService("StarterGui")
-------------------


--// Player Variables \\--
local player = Players.LocalPlayer
local Character = player.Character
local HumanoidRootPart = Character:FindFirstChild("HumanoidRootPart")
local Humanoid = Character and Character:FindFirstChild("Humanoid")
---------------------------


--// Notification \\--
function Notify()
	StarterGui:SetCore("SendNotification", {Title = "C.Bring", Text = "Reach"})
end
Notify()
----------------------


--// Script \\--
RunService.Stepped:Connect(function()
	for _, p in pairs(Players:GetPlayers()) do
		if p.Name ~= player.Name and Humanoid and Humanoid.Health ~= 0 then
			
			local pCharacter = p.Character
			local pHumanoidRootPart = pCharacter:FindFirstChild("HumanoidRootPart")
			
			
			local Distance = (HumanoidRootPart.Position - pHumanoidRootPart.Position).Magnitude
			if Distance <= range then
				
				local Tool = player:FindFirstChildOfClass("Tool") and Character:FindFirstChildOfClass("Tool")
				local Handle = Tool and Tool:FindFirstChild("Handle")
				
				local limbs = {
					RightArm = pCharacter:FindFirstChild("Right Arm"),
					LeftArm = pCharacter:FindFirstChild("Left Arm"),
					RightLeg = pCharacter:FindFirstChild("Right Leg"),
					LeftLeg = pCharacter:FindFirstChild("Left Leg")
				}
				
				if Tool and Handle and limbs then
					Tool:Activate()
					
					for _, limb in ipairs(limbs) do
						if limb then
							limb:BreakJoints()
							limb.CFrame = Handle.CFrame
							limb.Transparency = 1
						end
					end
				end
			end
		end
	end
end)
